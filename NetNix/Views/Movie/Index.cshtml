
@{
    ViewBag.Title = "Index";
}

@using NetNix.Models

@model MovieDetailsModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.name</title>
</head>
<body>
    <br />
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-5">
                <img src="@Model.image" width="250" />
            </div>
            <div class="col-md-5">
                <div class="row">
                    <h2>@Model.name</h2>
                </div>
                <div class="row">
                    <h4><a href="@Url.Action("Index", "Director", new { id = Model.director.id })"><b>Director:</b> @Model.director.name</a></h4>
                </div>
                <div class="row">
                    <br />
                    <p><b>Release Date:</b> @Model.releaseDate</p>
                </div>
                <div class="row">
                    <br>
                    <p>@Model.shortDescription</p>
                </div>
                <div class="row">
                    <br />
                    <p>@Model.description</p>
                </div>
            </div>
        </div>
        <a href="@Url.Action("LikeMovie", "Movie", new { id = Model.id})"><img src="~/Content/icons8-mag-ich-50.png" /></a>
    </div>
</body>
</html>
